#!/bin/bash

# change mouse stuff
xinput set-prop 12 179 0.3 0 0 0 0.3 0 0 0 1

# change monitor stuff
xrandr --output DP-2-2 --mode 1920x1080 --output DP-2-1 --off --output eDP-1 --off
